@model SmartAdmin.WebUI.Models.WorkPlaces
@{ ViewData["Title"] = "Edit WorkPlaces";
    ViewData["PageName"] = "WorkPlaces";
    ViewData["Heading"] = "<i class='fal fa-th-list text-primary'></i> WorkPlaces";
    ViewData["Category1"] = "WorkPlaces";
    ViewData["PageDescription"] = ""; }

<div class="row">
    <div class="col-xl-12">
        <div id="panel-6" class="panel">
            <div class="panel-hdr bg-primary-700 bg-success-gradient">
                <h2>
                    Delete Compound
                </h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                    <button class="btn btn-panel waves-effect waves-themed" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></button>
                </div>
            </div>
            <div class="card-body">
                <form class="form-horizontal was-validated" asp-action="Edit">
                    <input type="hidden" asp-for="IdWorkPlace" />
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                        Workplace
                                    </label>
                                    <div class="col-sm-9">
                                        <input asp-for="workPlace" class="form-control" type="text" name="workPlace">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                        Notes
                                    </label>
                                    <div class="col-sm-9">
                                        <textarea asp-for="notes" class="form-control" type="text" name="workPlace"></textarea>
                                    </div>
                                </div>
                                <br>
                                <div class="form-group  alert alert-primary alert-dismissible text-center">
                                    <button class="btn btn-primary ml-auto waves-effect waves-themed" type="submit">Save </button>
                                    <a class="btn btn-secondary ml-1 waves-effect waves-themed" href="@Url.Action("Index")">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        pageTitle.innerHTML = '<i class="fontello-icon-monitor"></i>' + 'Edit a Workplace';

        $('#divAdminDash,#divOperations, #divpermission,  #divRegister, #divCompound').removeClass('active');
        $('#divIqama').addClass('active');
        $('#accAdminDashboard,#accOperations, #accPermission, #accRegister, #accCompound').removeClass('in');
        $('#accIqama').addClass('in');
    </script>
}

