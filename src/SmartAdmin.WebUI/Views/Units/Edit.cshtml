@model SmartAdmin.WebUI.Models.Units
@{
    ViewData["Title"] = "Edit Unit";
    ViewData["PageName"] = "Units page " + Model.idMasterBuilding;
    ViewData["Heading"] = "<i class='fal fa-th-list text-primary'></i> Edit Unit";
    ViewData["Category1"] = "Units";
    ViewData["PageDescription"] = "";
}
    <form asp-action="Edit" enctype="multipart/form-data" class="was-validated">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdUnit" />
        <input type="hidden" asp-for="isRented" />
        <input type="hidden" asp-for="UnitRentContractID" />
        <input type="hidden" asp-for="idMasterBuilding" value="@Model.idMasterBuilding" />
        @if (ViewBag.AlertSaveErr != null)
        {
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">
                <i class="fal fa-times"></i>
            </span>
        </button>
        <div class="d-flex flex-start w-100">
            <div class="d-flex flex-fill">
                <div class="flex-fill">
                    <p>  @ViewBag.AlertSaveErr</p>
                </div>
            </div>
        </div>
    </div>}
        <div class="row">
            <div class="col-xl-12">
                <div id="panel-6" class="panel ">
                    <div class="panel-hdr bg-primary-700 bg-success-gradient">
                        <h2>
                            Edit Unit
                        </h2>
                        <div class="panel-toolbar">
                            <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6 ">
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                        Owner *
                                    </label>
                                    <div class="col-sm-9">
                                        <select asp-for="UnitOwner" class="select2 form-control w-100" asp-items="ViewBag.IdOwner" required>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                        Building *
                                    </label>
                                    <div class="col-sm-9">
                                        <select asp-for="IdBuilding" class="select2 form-control w-100" asp-items="ViewBag.IdBuilding" required>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Unit Number *</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" required autocomplete="off" asp-for="UnitNumber">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                        Property Type *
                                    </label>
                                    <div class="col-sm-9">
                                        <select asp-for="IdPropertyType" class="select2 form-control w-100" asp-items="ViewBag.IdPropertyType" required>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                        Floor *
                                    </label>
                                    <div class="col-sm-9">
                                        <select asp-for="IdFloor" class="select2 form-control w-100" asp-items="ViewBag.IdFloor" required>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Unit Area *</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" autocomplete="off" asp-for="UnitArea" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">For Families</label>
                                    <div class="col-sm-9">
                                        <input type="checkbox" asp-for="Forfamilies" class="form-control" id="customSwitch1">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                        Unit Condition (Good/Requires Work) *
                                    </label>
                                    <div class="col-sm-9">
                                        <select asp-for="unitCondition" class="select2 form-control w-100" required>
                                            <option value="1" selected="selected">Good Condition</option>
                                            <option value="2">Requires Work (Bad Condition)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Notes </label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" asp-for="Notes">
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Number of Rooms *</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" asp-for="NUmberofRooms" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">English Unit Description</label>
                                    <div class="col-sm-9">
                                        <textarea class="form-control " asp-for="Description"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Arabic Unit Description</label>
                                    <div class="col-sm-9">
                                        <textarea class="form-control " asp-for="DescriptionAR"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Number of Living *</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" asp-for="NuberofLivings" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Number of Bathes *</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" asp-for="NoOfBaths" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Number of Majlis *</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" asp-for="NumberofMajlis" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Rent Rate *</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" asp-for="RentRate" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                        Electricity meter Number
                                    </label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control " asp-for="ElectricityMeterNumber">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                        Payment number
                                    </label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control " asp-for="ElectricityPaymentNumber">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                        Transfer the account to the tenant? *
                                    </label>
                                    <div class="col-sm-9">
                                        <div class="frame-wrap">
                                            <div class="custom-control custom-radio custom-control-inline">
                                                <input type="radio" class="custom-control-input" id="defaultInline1Radio" asp-for="TransferToTenanat" value="true">
                                                <label class="custom-control-label" for="defaultInline1Radio">Yes</label>
                                            </div>
                                            <div class="custom-control custom-radio custom-control-inline" style="padding-top:5px">
                                                <input type="radio" class="custom-control-input" id="defaultInline2Radio" asp-for="TransferToTenanat" value="false">
                                                <label class="custom-control-label" for="defaultInline2Radio">No</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="form-group  alert alert-primary alert-dismissible text-center">
                        <button class="btn btn-primary ml-auto waves-effect waves-themed" type="submit">Create Unit</button>
                        <button type="button" class="btn btn-secondary ml-1 waves-effect waves-themed" onclick="back()">Cancel</button>
                    </div>
                </div>
            </div>


        </div>
    </form>



@section ScriptsBlock{
    <script>
        function back() {
            var fallbackUrl = "/units?id="@Model.idMasterBuilding;
            var prevPage = window.location.href;
            window.history.go(-1);
            setTimeout(function () {
                if (window.location.href == prevPage) {
                    window.location.href = fallbackUrl;
                }
            }, 500);
        }
    </script>
}
