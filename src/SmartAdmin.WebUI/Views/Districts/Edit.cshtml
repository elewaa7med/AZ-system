@model SmartAdmin.WebUI.Models.Districts

@{ ViewData["Title"] = "Edit Districts";
    ViewData["PageName"] = "Districts";
    ViewData["Heading"] = $"<i class='fal fa-th-list text-primary'></i> Districts";
    ViewData["Category1"] = "Districts";
    ViewData["PageDescription"] = ""; }




<form asp-action="Edit" enctype="multipart/form-data" class="was-validated">
    <input type="hidden" asp-for="IdDistrict" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (ViewBag.AlertSaveErr != null)
    {
<div class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">
            <i class="fal fa-times"></i>
        </span>
    </button>
    <div class="d-flex flex-start w-100">
        <div class="d-flex flex-fill">
            <div class="flex-fill">
                <p>  @ViewBag.AlertSaveErr</p>
            </div>
        </div>
    </div>
</div>}
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-6" class="panel ">
                <div class="panel-hdr bg-primary-700 bg-success-gradient">
                    <h2>
                        Edit Position
                    </h2>
                    <div class="panel-toolbar">
                        <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6 ">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">City Name*</label>
                                <div class="col-sm-9">
                                    <select asp-for="IdCity" class="form-control" asp-items="ViewBag.IdCity"></select>
                                    <span asp-validation-for="IdCity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">District Name*</label>
                                <div class="col-sm-9">
                                    <input asp-for="DistrictName" type="text" class="form-control" required autocomplete="off" />
                                    <span asp-validation-for="DistrictName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <br>

                <div class="form-group  alert alert-primary alert-dismissible text-center">
                    <button class="btn btn-primary ml-auto waves-effect waves-themed" type="submit">Save</button>
                    <a class="btn btn-secondary ml-1 waves-effect waves-themed" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <script>
        $(document).ready(function () {
            //$('#IdCity').select2({placeholder:'Select a City'});
            pageTitle.innerHTML = '<i class="fontello-icon-monitor"></i>' + 'Edit District';
        });
    </script>
}
