@model SmartAdmin.WebUI.Models.Tenants

@{
    ViewData["Title"] = "Create Tenant";
    ViewData["PageName"] = "Not Tenants page";
    ViewData["Heading"] = $"<i class='fal fa-th-list text-primary'></i> Create Tenant";
    ViewData["Category1"] = "Tenants";
    ViewData["PageDescription"] = "";
}
<form asp-action="Create" enctype="multipart/form-data" class="was-validated">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (ViewBag.AlertSaveErr != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">
                    <i class="fal fa-times"></i>
                </span>
            </button>
            <div class="d-flex flex-start w-100">
                <div class="d-flex flex-fill">
                    <div class="flex-fill">
                        <p>  @ViewBag.AlertSaveErr</p>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-6" class="panel ">
                <div class="panel-hdr bg-primary-700 bg-success-gradient">
                    <h2>
                        Create Tenant
                    </h2>
                    <div class="panel-toolbar">
                        <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6 ">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Tenant Name In English*</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" required autocomplete="off" asp-for="tenantName">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Tenant Name In Arabic</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" autocomplete="off" asp-for="TenantNameAR">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Tenant Mobile *</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" autocomplete="off" asp-for="tenantMobile" required>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Emergency Phone * </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="emergencyPhone" required>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                    Nationality *
                                </label>
                                <div class="col-sm-9">
                                    <select asp-for="IdNationality" class="select2 form-control w-100" asp-items="ViewBag.IdNationality" required>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Iqama No </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="IqamaNo">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="TenantCompany" class="col-form-label col-sm-3 text-sm-right form-label">Tents Company Name </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="TenantCompany">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                    Company *
                                </label>
                                <div class="col-sm-9">
                                    <select asp-for="IdCompany" class="select2 form-control w-100" asp-items="ViewBag.IdCompany" required>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Tenant Remarks </label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" asp-for="tenantsNotes">

                                    </textarea>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Tenant Family Count *</label>
                                <div class="col-sm-9">
                                    <input type="number" min="1" class="form-control" asp-for="tenantFamilycount" required>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Tenant Email*</label>
                                <div class="col-sm-9">
                                    <input type="email" class="form-control" asp-for="tenantEmail" required>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-sm-3 text-sm-right form-label" for="example-fileinput">Iqama Picture</label>
                                <div class="col-sm-9">
                                    <input type="file" id="example-fileinput" class="form-control-file" name="iqamaImageFile">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Iqama Expiration Date *</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <input type="text" value="" class="form-control az-datepicker-3" asp-for="dtIqamaExpiration" autocomplete="off" required>
                                        <div class="input-group-append">
                                            <span class="input-group-text fs-xl">
                                                <i class="fal fa-calendar-alt"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">ID Letter </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="IdLetterPicture">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Work Notes </label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" asp-for="workNotes">
                                    </textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Tenant is Married</label>
                                <div class="col-sm-9">
                                    <input type="checkbox" asp-for="isMarried" class="form-control" id="customSwitch1">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br>

                <div class="form-group  alert alert-primary alert-dismissible text-center">
                    <button class="btn btn-primary ml-auto waves-effect waves-themed" type="submit">Create Tenant</button>
                    <a class="btn btn-secondary ml-1 waves-effect waves-themed" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section ScriptsBlock{
    <script>
        $('#IdNationality').val(null).trigger('change');

        $('#IdCompany').val(null).trigger('change');
    </script>
}