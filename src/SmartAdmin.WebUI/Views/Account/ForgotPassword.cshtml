@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Register";
    ViewData["PageName"] = "";
    ViewData["Heading"] = $"<i class='fal fa-th-list text-primary'></i> Register";
    ViewData["Category1"] = "Register";
    ViewData["PageDescription"] = "";
    ViewData["Title"] = "";
    Layout = "~/Areas/Identity/Pages/_Layout.cshtml";
}

@section PageHeading {
    <div class="col-xl-12">
        <h2 class="fs-xxl fw-500 text-white text-center">
            "Forgot your password?"
            <small class="h3 fw-300 mt-3 mb-5 text-white opacity-60 hidden-sm-down">
                Not a problem, happens to the best of us. Just use the form below to reset it!
            </small>
        </h2>
    </div>
}


@if (ViewBag.AlertSaveOK != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        @ViewBag.AlertSaveOK
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="container">
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" enctype="multipart/form-data" class="was-validated">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (ViewBag.AlertSaveErr != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">
                        <i class="fal fa-times"></i>
                    </span>
                </button>
                <div class="d-flex flex-start w-100">
                    <div class="d-flex flex-fill">
                        <div class="flex-fill">
                            <p>  @ViewBag.AlertSaveErr</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="offset-1 col-md-10">
                <div id="panel-12" class="panel ">
                    <div class="panel-hdr bg-primary-700 bg-success-gradient">
                        <h2>
                            Forget password
                        </h2>
                        <div class="panel-toolbar">
                            <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12 ">
                                <div class="form-group row">
                                    <label for="Email" class="col-form-label col-sm-3 text-sm-right form-label">Your username or email</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Email" class="form-control" />
                                        <span class="invalid-feedback text-danger" asp-validation-for="Email">No, you missed this one.</span>
                                    </div>
                                    <label for="Email" class="col-form-label col-sm-3 text-sm-right form-label"></label>
                                    <div class="help-block">We will email you the instructions on how to reset your password.</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>

                    <div class="form-group  alert alert-primary  text-center">
                        <button class="btn btn-primary ml-auto waves-effect waves-themed" type="submit">Recover</button>
                        <button type="button" class="btn btn-secondary ml-1 waves-effect waves-themed" onclick="back()">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {

            $(function () {
                $(".alert-dismissible").fadeTo(5000, 500).slideUp(500, function () {
                    $(".alert-dismissible").alert('close');
                });
            });
        });
        function back() {
            var fallbackUrl = "/units";
            var prevPage = window.location.href;
            window.history.go(-1);
            setTimeout(function () {
                if (window.location.href == prevPage) {
                    window.location.href = fallbackUrl;
                }
            }, 500);
        }
    </script>
}

