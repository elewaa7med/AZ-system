@model ResetPasswordViewModel
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Areas/Identity/Pages/_Layout.cshtml";
}
@section PageHeading {
    <div class="col-xl-12">
        <h2 class="fs-xxl fw-500 text-white text-center">
            Welcome to AZ System
            <small class="h3 fw-300 mt-2 mb-5 text-white opacity-60 hidden-sm-down">
                Reset your password
            </small>
        </h2>
    </div>
}
<div class="container">
    <form method="post" class="was-validated">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (ViewBag.AlertSaveErr != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">
                        <i class="fal fa-times"></i>
                    </span>
                </button>
                <div class="d-flex flex-start w-100">
                    <div class="d-flex flex-fill">
                        <div class="flex-fill">
                            <p>  @ViewBag.AlertSaveErr</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="offset-1 col-md-10">
                <div id="panel-12" class="panel ">
                    <div class="panel-hdr bg-primary-700 bg-success-gradient">
                        <h2>
                            Reset password
                        </h2>
                        @*<div class="panel-toolbar">
                            <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                        </div>*@
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <input asp-for="Code" type="hidden" />
                                <div class="form-group row">
                                    <label for="Email" class="col-form-label col-sm-3 text-sm-right form-label">Your username or email</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Email" class="form-control" required />
                                        <span class="invalid-feedback text-danger" asp-validation-for="Email"></span>
                                    </div>
                                    <label for="Email" class="col-form-label col-sm-3 text-sm-right form-label"></label>
                                    @*<div class="help-block">We will email you the instructions on how to reset your password.</div>*@
                                </div>
                                <div class="form-group row">
                                    <label for="Password" class="col-form-label col-sm-3 text-sm-right form-label">Password</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Password" class="form-control" required/>
                                        <span class="invalid-feedback text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <label for="Email" class="col-form-label col-sm-3 text-sm-right form-label"></label>
                                    @*<div class="help-block">We will email you the instructions on how to reset your password.</div>*@
                                </div>
                                <div class="form-group row">
                                    <label for="Confirm Password" class="col-form-label col-sm-3 text-sm-right form-label">Confirm password</label>
                                    <div class="col-sm-9">
                                        <input asp-for="ConfirmPassword" class="form-control" required/>
                                        <span class="invalid-feedback text-danger" asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                    <label for="Email" class="col-form-label col-sm-3 text-sm-right form-label"></label>
                                    @*<div class="help-block">We will email you the instructions on how to reset your password.</div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="form-group alert alert-primary text-center">
                        <button class="btn btn-primary ml-auto waves-effect waves-themed" type="submit">Reset</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>