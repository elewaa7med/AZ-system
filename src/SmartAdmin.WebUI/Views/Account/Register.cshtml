@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    ViewData["PageName"] = "Register";
    ViewData["Heading"] = $"<i class='fal fa-th-list text-primary'></i> Register";
    ViewData["Category1"] = "Register";
    ViewData["PageDescription"] = "";
    ViewData["Title"] = "";
    //Layout = "~/views/shared/_Layout.cshtml";     
}


@if (ViewBag.AlertSaveOK != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        @ViewBag.AlertSaveOK
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<div class="">

    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" enctype="multipart/form-data" class="was-validated">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (ViewBag.AlertSaveErr != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">
                        <i class="fal fa-times"></i>
                    </span>
                </button>
                <div class="d-flex flex-start w-100">
                    <div class="d-flex flex-fill">
                        <div class="flex-fill">
                            <p>  @ViewBag.AlertSaveErr</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="col">
                <div id="panel-12" class="panel ">
                    <div class="panel-hdr bg-primary-700 bg-success-gradient">
                        <h2>
                            Register
                        </h2>
                        <div class="panel-toolbar">
                            <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12 ">
                                <div class="form-group row">
                                    <label for="IdBuilding" class="col-form-label col-sm-3 text-sm-right form-label">Full Name</label>
                                    <div class="col-sm-9">
                                        <input asp-for="fullName" class="form-control" />
                                        <span asp-validation-for="fullName" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label for="IdBuilding" class="col-form-label col-sm-3 text-sm-right form-label">Mobile No</label>
                                    <div class="col-sm-9">
                                        <input asp-for="mobileNo" class="form-control" />
                                        <span asp-validation-for="mobileNo" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="IdUnit" class="col-form-label col-sm-3 text-sm-right form-label">Position</label>
                                    <div class="col-sm-9">
                                        <select id="Idposition" class="select2 form-control span8" asp-items="@(new SelectList(Model.Jobpositions,"IdPosition","positionName_E","IdPosition"))" name="Idposition">
                                            <option>Select A Position</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="IdBuilding" class="col-form-label col-sm-3 text-sm-right form-label">Email</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="IdBuilding" class="col-form-label col-sm-3 text-sm-right form-label">User Name</label>
                                    <div class="col-sm-9">
                                        <input asp-for="UserName" class="form-control" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="IdBuilding" class="col-form-label col-sm-3 text-sm-right form-label">Password</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="IdBuilding" class="col-form-label col-sm-3 text-sm-right form-label">ConfirmPassword</label>
                                    <div class="col-sm-9">
                                        <input asp-for="ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                    <br>

                    <div class="form-group  alert alert-primary  text-center">
                        <button class="btn btn-primary ml-auto waves-effect waves-themed" type="submit">Register</button>
                        @*<button type="button" class="btn btn-secondary ml-1 waves-effect waves-themed" onclick="back()">Cancel</button>*@
                    </div>
                </div>
            </div>


        </div>
    </form>
</div>





@section Scripts
{
    <script>
        $(document).ready(function () {

            $(function () {
                $(".alert-dismissible").fadeTo(5000, 500).slideUp(500, function () {
                    $(".alert-dismissible").alert('close');
                });
            });




        });

        function back() {
            var fallbackUrl = "/units";
            var prevPage = window.location.href;
            window.history.go(-1);
            setTimeout(function () {
                if (window.location.href == prevPage) {
                    window.location.href = fallbackUrl;
                }
            }, 500);
        }
    </script>
}
