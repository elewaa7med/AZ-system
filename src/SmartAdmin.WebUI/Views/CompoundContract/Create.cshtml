@model SmartAdmin.WebUI.Models.CompoundContracts

@{
    ViewData["Title"] = "Create Compound Contract";
    ViewData["PageName"] = "Compounds Contracts";
    ViewData["Heading"] = $"<i class='fal fa-th-list text-primary'></i> Create Compound Contract";
    ViewData["Category1"] = "Compound Contract";
    ViewData["PageDescription"] = "";
}
<form asp-action="Create" enctype="multipart/form-data" class="was-validated">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (ViewBag.AlertSaveErr != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">
                    <i class="fal fa-times"></i>
                </span>
            </button>
            <div class="d-flex flex-start w-100">
                <div class="d-flex flex-fill">
                    <div class="flex-fill">
                        <p>  @ViewBag.AlertSaveErr</p>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-6" class="panel ">
                <div class="panel-hdr bg-primary-700 bg-success-gradient">
                    <h2>
                       Create Compound Contract 
                    </h2>
                    <div class="panel-toolbar">
                        <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-9 ">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Compound Name</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="CompoundName" class="form-control" required/>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Lease Start Date *</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <input type="text" value="" class="form-control az-datepicker-3" asp-for="dtLeaseStart" autocomplete="off" required>
                                        <div class="input-group-append">
                                            <span class="input-group-text fs-xl">
                                                <i class="fal fa-calendar-alt"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Lease End Date *</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <input type="text" value="" class="form-control az-datepicker-3" asp-for="dtLeaseEnd" autocomplete="off" required>
                                        <div class="input-group-append">
                                            <span class="input-group-text fs-xl">
                                                <i class="fal fa-calendar-alt"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-sm-3 text-sm-right form-label" for="example-fileinput">Contract Image</label>
                                <div class="col-sm-9">
                                    <input type="file" id="example-fileinput" class="form-control-file" name="contractImageFile">
                                </div>
                            </div>
                           
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Notes </label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" asp-for="Notes">
                                    </textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <div class="form-group  alert alert-primary alert-dismissible text-center">
                    <button class="btn btn-primary ml-auto waves-effect waves-themed" type="submit">Create Compound Contract</button>
                    <a class="btn btn-secondary ml-1 waves-effect waves-themed" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
