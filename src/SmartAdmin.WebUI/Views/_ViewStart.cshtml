@{

    var RouteData = Context.Request.Path.Value.Split("/");
    var controllerName = RouteData[1];
    switch (controllerName)
    {
        case "Invoice":
            Layout = "~/Views/Shared/_Global_Invoice.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}
