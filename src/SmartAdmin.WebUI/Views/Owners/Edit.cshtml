@model SmartAdmin.WebUI.Models.Owners

@{ ViewData["Title"] = "Edit Owners";
    ViewData["PageName"] = "Owners";
    ViewData["Heading"] = $"<i class='fal fa-th-list text-primary'></i> Owners";
    ViewData["Category1"] = "Owners";
    ViewData["PageDescription"] = ""; }


    <form asp-action="Edit" enctype="multipart/form-data" class="was-validated">
        <input type="hidden" asp-for="IdOwner" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (ViewBag.AlertSaveErr != null)
        {
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">
                <i class="fal fa-times"></i>
            </span>
        </button>
        <div class="d-flex flex-start w-100">
            <div class="d-flex flex-fill">
                <div class="flex-fill">
                    <p>  @ViewBag.AlertSaveErr</p>
                </div>
            </div>
        </div>
    </div>}
        <div class="row">
            <div class="col-xl-12">
                <div id="panel-6" class="panel ">
                    <div class="panel-hdr bg-primary-700 bg-success-gradient">
                        <h2>
                            Edit Position
                        </h2>
                        <div class="panel-toolbar">
                            <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6 ">
                                <div class="form-group row">
                                    <label for="OwnerName" class="col-form-label col-sm-3 text-sm-right form-label">Owner Name*</label>
                                    <div class="col-sm-9">
                                        <input asp-for="OwnerName" type="text" class="form-control" required autocomplete="off" />
                                        <span asp-validation-for="OwnerName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="OwnerPhone" class="col-form-label col-sm-3 text-sm-right form-label">Owner Phone*</label>
                                    <div class="col-sm-9">
                                        <input asp-for="OwnerPhone" type="text" class="form-control" required autocomplete="off" />
                                        <span asp-validation-for="OwnerPhone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="OwnerAddress" class="col-form-label col-sm-3 text-sm-right form-label">Owner Address*</label>
                                    <div class="col-sm-9">
                                        <input asp-for="OwnerAddress" type="text" class="form-control" required autocomplete="off" />
                                        <span asp-validation-for="OwnerAddress" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="ContactName" class="col-form-label col-sm-3 text-sm-right form-label">Contact Name*</label>
                                    <div class="col-sm-9">
                                        <input asp-for="ContactName" type="text" class="form-control" required autocomplete="off" />
                                        <span asp-validation-for="ContactName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="OwnerNnotes" class="col-form-label col-sm-3 text-sm-right form-label">Notes</label>
                                    <div class="col-sm-9">
                                        <input asp-for="OwnerNnotes" type="text" class="form-control"  autocomplete="off" />
                                        <span asp-validation-for="OwnerNnotes" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="OwnerMobile" class="col-form-label col-sm-3 text-sm-right form-label">Owner Mobile*</label>
                                    <div class="col-sm-9">
                                        <input asp-for="OwnerMobile" type="text" class="form-control" required autocomplete="off" />
                                        <span asp-validation-for="OwnerMobile" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="Owneremail" class="col-form-label col-sm-3 text-sm-right form-label">Owner Email*</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Owneremail" type="text" class="form-control" required autocomplete="off" />
                                        <span asp-validation-for="Owneremail" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="CompanyName" class="col-form-label col-sm-3 text-sm-right form-label">Company Name*</label>
                                    <div class="col-sm-9">
                                        <input asp-for="CompanyName" type="text" class="form-control" required autocomplete="off" />
                                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="ContactPhone" class="col-form-label col-sm-3 text-sm-right form-label">Contact Phone*</label>
                                    <div class="col-sm-9">
                                        <input asp-for="ContactPhone" type="text" class="form-control" required autocomplete="off" />
                                        <span asp-validation-for="ContactPhone" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <br>

                    <div class="form-group  alert alert-primary alert-dismissible text-center">
                        <button class="btn btn-primary ml-auto waves-effect waves-themed" type="submit">Save</button>
                        <a class="btn btn-secondary ml-1 waves-effect waves-themed" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </form>


@section Scripts{
    <script>
        pageTitle.innerHTML = '<i class="fontello-icon-monitor"></i>' + 'Edit an Owner';
    </script>
}
