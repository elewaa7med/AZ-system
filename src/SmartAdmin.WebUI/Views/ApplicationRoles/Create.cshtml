@model SmartAdmin.WebUI.Models.RolesViewModel.EditRoleViewModel
@{
    ViewData["Title"] = "Create Role";
    ViewData["PageName"] = "Roles";
    ViewData["Heading"] = "<i class='fal fa-user text-primary'></i> Roles";
    ViewData["Category1"] = "Roles";
    ViewData["PageDescription"] = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/lou-multi-select-57fb8d3/css/multi-select.css" rel="stylesheet" />
<form asp-action="Create" class="was-validated">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (ViewBag.AlertSaveErr != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">
                    <i class="fal fa-times"></i>
                </span>
            </button>
            <div class="d-flex flex-start w-100">
                <div class="d-flex flex-fill">
                    <div class="flex-fill">
                        <p>  @ViewBag.AlertSaveErr</p>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-6" class="panel ">
                <div class="panel-hdr bg-primary-700 bg-success-gradient">
                    <h2>
                        Create Role
                    </h2>
                    <div class="panel-toolbar">
                        <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12 ">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                    Name *
                                </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" required autocomplete="off" asp-for="mRole.Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">
                                    Description
                                </label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" autocomplete="off" asp-for="mRole.Description">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Permissions </label>
                                <div class="col-sm-9">
                                    <select class="multiSelect22 select-control" multiple="multiple" asp-for="Users" asp-items="ViewBag.Users">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <div class="form-group  alert alert-primary alert-dismissible text-center">
                    <button class="btn btn-primary ml-auto waves-effect waves-themed" type="submit">Save</button>
                    <button type="button" class="btn btn-secondary ml-1 waves-effect waves-themed" onclick="back()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <script src="~/lou-multi-select-57fb8d3/js/jquery.multi-select.js"></script>
    <script>
        $(function () {
            $('.multiSelect22').multiSelect();
        })
        function back() {
            var fallbackUrl = "/ApplicationRoles";
            var prevPage = window.location.href;
            window.history.go(-1);
            setTimeout(function () {
                if (window.location.href == prevPage) {
                    window.location.href = fallbackUrl;
                }
            }, 500);
        }
    </script>
}
