@model SmartAdmin.WebUI.Models.Cities
@{ ViewData["Title"] = "Add Cities";
    ViewData["PageName"] = "Cities";
    ViewData["Heading"] = "<i class='fal fa-th-list text-primary'></i> Add Cities";
    ViewData["Category1"] = "Units";
    ViewData["PageDescription"] = ""; }

<form asp-action="Create" enctype="multipart/form-data" class="was-validated">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (ViewBag.AlertSaveErr != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">
                    <i class="fal fa-times"></i>
                </span>
            </button>
            <div class="d-flex flex-start w-100">
                <div class="d-flex flex-fill">
                    <div class="flex-fill">
                        <p>  @ViewBag.AlertSaveErr</p>
                    </div>
                </div>
            </div>
        </div>
    }
        <div class="row">
        <div class="col-xl-12">
            <div id="panel-6" class="panel ">
                <div class="panel-hdr bg-primary-700 bg-success-gradient">
                    <h2>
                        Create Position
                    </h2>
                    <div class="panel-toolbar">
                        <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6 ">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Country*</label>
                                <div class="col-sm-9">
                                    <select asp-for="IdCountry" class="form-control" name="IdCountry" asp-items="ViewBag.IdCountry">
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label"> City Name*</label>
                                <div class="col-sm-9">
                                    <input for="CityName" class="form-control" type="text" value="" name="CityName">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <br>

                <div class="form-group  alert alert-primary alert-dismissible text-center">
                    <button class="btn btn-primary ml-auto waves-effect waves-themed" type="submit">Create</button>
                    <a class="btn btn-secondary ml-1 waves-effect waves-themed" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <script>
        $(document).ready(function () {
            pageTitle.innerHTML = '<i class="fontello-icon-monitor"></i>' + 'Create Cities ';
            $('#IdCountry').select2();
        });
    </script>
}
