@model SmartAdmin.WebUI.Models.Cities
@{ ViewData["Title"] = "Delete Cities";
    ViewData["PageName"] = "Cities";
    ViewData["Heading"] = $"<i class='fal fa-th-list text-primary'></i> Cities";
    ViewData["Category1"] = "Cities";
    ViewData["PageDescription"] = ""; }

<div>
    @if (ViewBag.AlertSaveErr != null)
    {
<div class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">
            <i class="fal fa-times"></i>
        </span>
    </button>
    <div class="d-flex flex-start w-100">
        <div class="d-flex flex-fill">
            <div class="flex-fill">
                <p>  @ViewBag.AlertSaveErr</p>
            </div>
        </div>
    </div>
</div>}
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-6" class="panel ">
                <div class="panel-hdr bg-primary-700 bg-success-gradient">
                    <h2>
                        Delete Cities
                    </h2>
                    <div class="panel-toolbar">
                        <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6 ">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">Country Name*</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" disabled autocomplete="off" asp-for="@Model.mBuildingCountry.CountryName">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-form-label col-sm-3 text-sm-right form-label">City Name *</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" disabled autocomplete="off" asp-for="@Model.CityName">
                                </div>
                            </div>

                        </div>
                    </div>
                    <br>
                    <form asp-action="Delete" class="form-group  alert alert-primary alert-dismissible text-center">
                        <input type="hidden" asp-for="IdCity" />
                        <button class="btn btn-danger ml-auto waves-effect waves-themed" type="submit">Delete</button>
                        <a class="btn btn-secondary ml-1 waves-effect waves-themed" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        pageTitle.innerHTML = '<i class="fontello-icon-monitor"></i>' + 'Delete City';
    </script>
}
